<ResourceDictionary 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"

        xmlns:vm="clr-namespace:Finances.WinClient.ViewModels"
        xmlns:v="clr-namespace:Finances.WinClient.Views"
    >


    <!-- Bank -->
    <DataTemplate DataType="{x:Type vm:BankListViewModel}">
        <v:BanksView/>
    </DataTemplate>
    <!--<DataTemplate DataType="{x:Type vm:BanksViewModelNoService}">
        <v:BanksView/>
    </DataTemplate>-->
    <DataTemplate DataType="{x:Type vm:BankEditorViewModel}">
        <v:BankEditorView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:BankTreeViewModel}">
        <v:BankTreeView/>
    </DataTemplate>

    <!-- Bank Account -->
    <DataTemplate DataType="{x:Type vm:BankAccountListViewModel}">
        <v:BankAccountsView/>
    </DataTemplate>
    <!--<DataTemplate DataType="{x:Type vm:BankAccountsViewModelNoService}">
        <v:BankAccountsView/>
    </DataTemplate>-->
    <DataTemplate DataType="{x:Type vm:BankAccountEditorViewModel}">
        <v:BankAccountEditorView/>
    </DataTemplate>

    <!-- Transfers -->
    <DataTemplate DataType="{x:Type vm:TransferListViewModel}">
        <v:TransferListView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:TransferEditorViewModel}">
        <v:TransferEditorView/>
    </DataTemplate>

    <!--Cashflows-->
    <DataTemplate DataType="{x:Type vm:CashflowListViewModel}">
        <v:CashflowListView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:CashflowEditorViewModel}">
        <v:CashflowEditorView/>
    </DataTemplate>


    <!-- -->
    <DataTemplate DataType="{x:Type vm:CashflowTableViewModel}">
        <v:CashflowTableView/>
    </DataTemplate>

    <!--BalanceDate-->
    <DataTemplate DataType="{x:Type vm:BalanceDateListViewModel}">
        <v:BalanceDateListView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:BalanceDateEditorViewModel}">
        <v:BalanceDateEditorView/>
    </DataTemplate>
    
    <!-- Dashboard -->
    <DataTemplate DataType="{x:Type vm:DashboardViewModel}">
        <v:DashboardView/>
    </DataTemplate>
    
    <!--Main-->
    <DataTemplate DataType="{x:Type vm:MainViewModel}">
        <v:MainView/>
    </DataTemplate>

    <!--Application-->
    <DataTemplate DataType="{x:Type vm:WorkspaceAreaViewModel}">
        <v:WorkspaceAreaView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type sys:Boolean}">
        <v:BooleanView/>
    </DataTemplate>

</ResourceDictionary>